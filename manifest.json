---
layout: none
# source: https://alokprateek.in/articles/jekyll-pwa/
---

{
  "lang": "{{ site.language }}",
  "dir": "{{ site.lang_direction }}",
  "name": {{ site.name | smartify | jsonify }},
  "short_name": {{ site.short_name | smartify | jsonify }},
  "icons": [
    {
      "src": "\/assets\/fav\/android-icon-192x192.png",
      "sizes": "192x192",
      "type": "image\/png"
    },
    {
      "src": "\/assets\/fav\/logo-512x512.png",
      "sizes": "512x512",
      "type": "image\/png"
    },
    {
      "src": "\/assets\/fav\/maskable_icon.png",
      "sizes": "196x196",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "theme_color": "{{ site.color }}",
  "background_color": "{{ site.color }}",
  "start_url": "/",
  "display": "standalone",
  "orientation": "natural"
}
